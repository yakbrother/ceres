---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import { siteConfig } from '../../astro.config.mjs';
---

<BaseLayout title={siteConfig.title} description={siteConfig.description} layout="docs">
  <Header />
  <Sidebar />
  
  <main id="main-content" class="main-content" role="main">
    <div class="homepage">
      <div class="homepage__container">
        <section class="hero">
          <h1 class="hero__title">
            Welcome to <span class="hero__accent">{siteConfig.title}</span>
          </h1>
          <p class="hero__description">
            {siteConfig.description}
          </p>
          <p class="hero__intro">
            This digital brain serves as a comprehensive knowledge base and documentation system. 
            Built with modern web technologies, it provides a fast, searchable, and accessible 
            platform for organizing and sharing information.
          </p>
          <p class="hero__getting-started">
            Navigate through the sidebar to explore different topics and sections. Use the search 
            functionality to quickly find specific information. Whether you're looking for technical 
            documentation, guides, or reference materials, everything is organized and easily accessible.
          </p>
          <div class="hero__actions">
            <a href="/docs/getting-started/introduction" class="btn btn--primary">
              Get Started
            </a>
            <a href="/docs/guides/writing-content" class="btn btn--secondary">
              Learn More
            </a>
          </div>
        </section>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .main-content {
    grid-area: main;
    min-width: 0;
    padding: var(--space-s);
    max-width: 100%;
  }
  
  .homepage {
    max-width: 65ch;
    margin: 0 auto;
  }
  
  .homepage__container {
    padding: var(--space-l);
  }
  
  .hero {
    padding: var(--space-xl) 0;
  }
  
  .hero__title {
    font-size: var(--step-4);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--space-m);
    color: var(--color-text-primary);
  }
  
  .hero__accent {
    color: var(--color-accent);
  }
  
  .hero__description {
    font-size: var(--step-1);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-l);
    line-height: 1.6;
  }
  
  .hero__intro,
  .hero__getting-started {
    font-size: var(--step-0);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-m);
    line-height: 1.6;
  }
  
  .hero__actions {
    display: flex;
    gap: var(--space-s);
    flex-wrap: wrap;
    margin-top: var(--space-l);
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-s) var(--space-m);
    border-radius: var(--radius-lg);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
    border: 2px solid transparent;
  }
  
  .btn--primary {
    background-color: var(--color-accent);
    color: white;
  }
  
  .btn--primary:hover {
    background-color: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
  }
  
  .btn--secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border-color: var(--color-border-medium);
  }
  
  .btn--secondary:hover {
    background-color: var(--color-bg-secondary);
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-2px);
    text-decoration: none;
  }
  
  /* Mobile adjustments */
  @media (max-width: 1024px) {
    .main-content {
      padding: var(--space-xs);
    }
    
    .hero__title {
      font-size: var(--step-3);
    }
  }
  
  @media (max-width: 640px) {
    .homepage__container {
      padding: var(--space-s);
    }
    
    .hero__title {
      font-size: var(--step-2);
      line-height: 1.2;
    }
    
    .hero__description,
    .hero__intro,
    .hero__getting-started {
      font-size: var(--step--1);
    }
    
    .hero__actions {
      flex-direction: column;
    }
    
    .btn {
      justify-content: center;
    }
  }
</style>