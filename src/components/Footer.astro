---
import { siteConfig } from '../../astro.config.mjs';
---

<footer class="footer" role="contentinfo">
  <!-- Colored stripes -->
  <div class="footer__stripes">
    <div class="footer__stripe footer__stripe--thistle"></div>
    <div class="footer__stripe footer__stripe--beaver"></div>
    <div class="footer__stripe footer__stripe--copper"></div>
  </div>
  
  <div class="footer__container">
    <div class="footer__content">
      <!-- Column 1: About -->
      <div class="footer__column">
        <h2 class="footer__title">{siteConfig.title}</h2>
        <p class="footer__description">
          A modern documentation template built for knowledge sharing and collaboration.
        </p>
        <div class="footer__social">
          {siteConfig.social.github && (
            <a 
              href={`https://github.com/${siteConfig.social.github}`}
              class="footer__social-link"
              aria-label="Visit GitHub profile (opens in new tab)"
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class="fab fa-github" aria-hidden="true"></i>
            </a>
          )}
          {siteConfig.social.twitter && (
            <a 
              href={`https://twitter.com/${siteConfig.social.twitter}`}
              class="footer__social-link"
              aria-label="Visit Twitter profile (opens in new tab)"
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class="fab fa-twitter" aria-hidden="true"></i>
            </a>
          )}
          {siteConfig.social.mastodon && (
            <a 
              href={`https://mastodon.social/${siteConfig.social.mastodon.replace('@', '').replace('@mastodon.social', '')}`}
              class="footer__social-link"
              aria-label="Visit Mastodon profile (opens in new tab)"
              target="_blank"
              rel="noopener noreferrer me"
            >
              <i class="fab fa-mastodon" aria-hidden="true"></i>
            </a>
          )}
        </div>
      </div>
      
      <!-- Column 2: Quick Links -->
      <div class="footer__column">
        <h3 class="footer__column-title">Quick Links</h3>
        <nav class="footer__nav">
          <a href="/" class="footer__link">Home</a>
          <a href="/docs/getting-started/introduction" class="footer__link">Get Started</a>
          <a href="/docs/guides/writing-content" class="footer__link">Writing Guide</a>
          <a href="/about" class="footer__link">About</a>
        </nav>
      </div>
      
      <!-- Column 3: Resources -->
      <div class="footer__column">
        <h3 class="footer__column-title">Resources</h3>
        <nav class="footer__nav">
          <a href="/docs/customization/themes" class="footer__link">Themes</a>
          <a href="/docs/deployment/hosting" class="footer__link">Deployment</a>
          <a href="/docs/advanced/performance" class="footer__link">Performance</a>
          <a href="mailto:your.email@domain.com" class="footer__link">Contact</a>
        </nav>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">
        Â© {new Date().getFullYear()} {siteConfig.title}. Built with <a href="https://astro.build" class="footer__link footer__link--inline">Astro</a>.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    grid-area: footer;
    background-color: var(--color-bg-secondary);
    margin-top: auto;
  }
  
  .footer__stripes {
    display: flex;
    height: 10px;
  }
  
  .footer__stripe {
    flex: 1;
  }
  
  .footer__stripe--thistle {
    background-color: var(--thistle);
  }
  
  .footer__stripe--beaver {
    background-color: var(--beaver);
  }
  
  .footer__stripe--copper {
    background-color: var(--copper);
  }
  
  .footer__container {
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: var(--space-xl) var(--space-s) var(--space-l);
  }
  
  .footer__content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: var(--space-xl);
    margin-bottom: var(--space-l);
  }
  
  .footer__column {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
  }
  
  .footer__title {
    font-size: var(--step-2);
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }
  
  .footer__description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }
  
  .footer__social {
    display: flex;
    gap: var(--space-xs);
    margin-top: var(--space-xs);
  }
  
  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .footer__social-link:hover {
    background-color: var(--color-accent);
    color: var(--color-surface-primary);
    transform: translateY(-2px);
  }
  
  .footer__column-title {
    font-size: var(--step-0);
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-xs) 0;
  }
  
  .footer__nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }
  
  .footer__link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--step--1);
    transition: color var(--transition-fast);
  }
  
  .footer__link:hover {
    color: var(--color-accent);
  }
  
  .footer__link--inline {
    color: var(--color-accent);
    font-weight: 500;
  }
  
  .footer__bottom {
    padding-top: var(--space-l);
    border-top: 1px solid var(--color-border-light);
    text-align: left;
  }
  
  .footer__copyright {
    color: var(--color-text-muted);
    font-size: var(--step--1);
    margin: 0;
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: var(--space-l);
    }
    
    .footer__container {
      padding: var(--space-l) var(--space-s);
    }
  }
  
  @media (max-width: 640px) {
    .footer__social {
      justify-content: flex-start;
    }
    
    .footer__nav {
      text-align: left;
    }
    
    .footer__bottom {
      text-align: left;
    }
  }
</style>