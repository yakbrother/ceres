---
import { siteConfig } from '../../astro.config.mjs';
import SearchBar from './SearchBar.astro';
---

<header class="header" role="banner">
  <div class="header__container">
    <!-- Mobile menu toggle -->
    <button 
      id="mobile-menu-toggle" 
      class="header__mobile-toggle"
      aria-label="Open navigation menu"
      aria-controls="sidebar"
      aria-expanded="false"
    >
      <i class="fas fa-bars" aria-hidden="true"></i>
    </button>
    
    <!-- Site title -->
    <div class="header__brand">
      <a href="/" class="header__title">
        {siteConfig.title}
      </a>
    </div>
    
    <!-- Navigation (search + actions) -->
    <nav class="header__nav" role="navigation" aria-label="Main navigation">
      <!-- Search bar -->
      <div class="header__search">
        <SearchBar />
      </div>
      
      <!-- Actions -->
      <div class="header__actions">
      <!-- Theme toggle -->
      <button 
        id="theme-toggle" 
        class="header__action-btn"
        aria-label="Toggle dark mode"
        aria-describedby="theme-help"
      >
        <i class="fas fa-moon" aria-hidden="true"></i>
      </button>
      <div id="theme-help" class="sr-only">
        Switch between light and dark color themes
      </div>
      </div>
    </nav>
  </div>
</header>


<style>
  .header {
    grid-area: header;
    background-color: var(--color-surface-elevated);
    border-bottom: 1px solid var(--color-border-light);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(8px);
    background-color: var(--color-surface-overlay);
  }
  
  .header__container {
    height: var(--header-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--space-s);
    max-width: var(--max-width-content);
    margin: 0 auto;
  }
  
  .header__mobile-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--color-text-primary);
    font-size: var(--step-1);
    cursor: pointer;
    padding: var(--space-xs);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
  }
  
  .header__mobile-toggle:hover {
    background-color: var(--color-bg-secondary);
  }
  
  .header__brand {
    flex-shrink: 0;
  }
  
  .header__title {
    font-size: var(--step-1);
    font-weight: 700;
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .header__title:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
  
  .header__nav {
    display: flex;
    align-items: center;
    gap: var(--space-s);
  }
  
  .header__search {
    max-width: 400px;
    flex: 1;
  }
  
  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-2xs);
    flex-shrink: 0;
  }
  
  .header__action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: none;
    border: none;
    color: var(--color-text-secondary);
    font-size: var(--step-0);
    cursor: pointer;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    text-decoration: none;
  }
  
  .header__action-btn:hover {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-primary);
    transform: translateY(-1px);
  }
  
  .header__action-btn:active {
    transform: translateY(0);
  }
  
  /* Container-based responsive behavior - fluid design approach */
  .header__container {
    container-type: inline-size;
  }
  
  /* Use container queries for fluid responsive behavior */
  @container (max-width: 48rem) {
    .header__mobile-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
  
  @container (max-width: 40rem) {
    .header__container {
      padding: 0 var(--space-xs);
      gap: var(--space-xs);
    }
    
    .header__title {
      font-size: var(--step-0);
    }
    
    .header__search {
      max-width: clamp(12rem, 40cqi, 25rem);
    }
    
    .header__actions {
      gap: 0;
    }
    
    .header__action-btn {
      width: clamp(2.25rem, 8cqi, 2.5rem);
      height: clamp(2.25rem, 8cqi, 2.5rem);
      font-size: var(--step--1);
    }
  }
  
  /* Intrinsic design - header adapts based on content and available space */
  .header__nav {
    /* Use flex with min-width constraints for natural responsive behavior */
    min-width: 0; /* Allow shrinking */
  }
  
  .header__search {
    /* Fluid width that responds to container size */
    min-width: clamp(10rem, 30cqi, 25rem);
    max-width: min(25rem, 60%);
  }
</style>