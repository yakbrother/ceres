---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import TableOfContents from '../components/TableOfContents.astro';

export interface Props {
  title: string;
  description: string;
  headings?: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
  lastUpdated?: Date;
  category?: string;
  tags?: string[];
}

const { 
  title, 
  description, 
  headings = [], 
  lastUpdated,
  category
} = Astro.props;
---

<BaseLayout title={title} description={description} article={true} layout="docs">
  <Header />
  <Sidebar />
  
  <main class="main-content">
    <!-- Table of Contents for mobile/medium screens -->
    <div class="toc-mobile-wrapper">
      <TableOfContents headings={headings} />
    </div>
    
    <article class="article">
      <header class="article__header">
        {category && (
          <div class="article__category">
            <i class="fas fa-folder"></i>
            <span>{category}</span>
          </div>
        )}
        
        <h1 class="article__title">{title}</h1>
        
        <div class="article__meta">
          {lastUpdated && (
            <div class="article__meta-item">
              <i class="fas fa-calendar-alt"></i>
              <span>Last updated: {lastUpdated.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}</span>
            </div>
          )}
        </div>
      </header>
      
      <div class="article__content">
        <slot />
      </div>
      
      <footer class="article__footer">
        <div class="article__footer-content">
          <p class="article__footer-text">
            Found an issue with this page? 
            <a href="mailto:your.email@domain.com" class="article__footer-link">
              Let us know
            </a>
          </p>
        </div>
      </footer>
    </article>
  </main>
  
  <!-- Table of Contents for desktop -->
  <TableOfContents headings={headings} />
  
  <Footer />
</BaseLayout>

<style>
  .main-content {
    grid-area: main;
    min-width: 0; /* Prevent overflow */
    padding: var(--space-s);
    max-width: 100%;
  }
  
  .toc-mobile-wrapper {
    display: none;
  }
  
  /* Show mobile ToC wrapper only on smaller screens */
  @media (max-width: 1199px) {
    .toc-mobile-wrapper {
      display: block;
    }
    
    .toc-mobile-wrapper :global(.toc) {
      /* Add mobile class via JavaScript since Astro doesn't support conditional classes easily */
    }
  }
  
  /* Hide mobile ToC wrapper on desktop */
  @media (min-width: 1200px) {
    .toc-mobile-wrapper {
      display: none;
    }
  }
  
  .article {
    max-width: 65ch;
    margin: 0 auto;
  }
  
  .article__header {
    margin-bottom: var(--space-xl);
    padding: var(--space-l);
    border-bottom: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
  }
  
  .article__category {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-accent);
    font-size: var(--step--1);
    font-weight: 500;
    margin-bottom: var(--space-s);
  }
  
  .article__category i {
    font-size: var(--step--2);
  }
  
  .article__title {
    font-size: var(--step-4);
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-text-primary);
    margin-bottom: var(--space-m);
  }
  
  .article__meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    color: var(--color-text-muted);
    font-size: var(--step--1);
  }
  
  .article__meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }
  
  .article__meta-item i {
    width: 1rem;
    text-align: center;
  }
  
  .article__content {
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }
  
  /* Enhanced typography for article content */
  .article__content :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-m);
    padding-top: var(--space-s);
    border-top: 1px solid var(--color-border-light);
  }
  
  .article__content :global(h2:first-child) {
    margin-top: 0;
    border-top: none;
    padding-top: 0;
  }
  
  .article__content :global(h3) {
    margin-top: var(--space-l);
    margin-bottom: var(--space-s);
  }
  
  .article__content :global(h4),
  .article__content :global(h5),
  .article__content :global(h6) {
    margin-top: var(--space-m);
    margin-bottom: var(--space-s);
  }
  
  .article__content :global(p) {
    margin-bottom: var(--space-s);
  }
  
  .article__content :global(ul),
  .article__content :global(ol) {
    margin-bottom: var(--space-s);
    padding-left: var(--space-m);
  }
  
  .article__content :global(li) {
    margin-bottom: var(--space-2xs);
  }
  
  .article__content :global(blockquote) {
    margin: var(--space-m) 0;
    padding: var(--space-s) var(--space-m);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
  }
  
  .article__content :global(pre) {
    margin: var(--space-m) 0;
    padding: var(--space-s);
    background-color: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    overflow-x: auto;
    font-size: var(--step--1);
  }
  
  .article__content :global(table) {
    margin: var(--space-m) 0;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }
  
  .article__content :global(img) {
    margin: var(--space-m) 0;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }
  
  .article__footer {
    margin-top: var(--space-xl);
    padding-top: var(--space-l);
    border-top: 1px solid var(--color-border-light);
  }
  
  .article__footer-content {
    text-align: center;
  }
  
  .article__footer-text {
    color: var(--color-text-muted);
    font-size: var(--step--1);
    margin: 0;
  }
  
  .article__footer-link {
    color: var(--color-accent);
    font-weight: 500;
  }
  
  .article__footer-link:hover {
    text-decoration: underline;
  }
  
  /* Mobile adjustments */
  @media (max-width: 1024px) {
    .main-content {
      padding: var(--space-xs);
    }
    
    .article__title {
      font-size: var(--step-3);
    }
    
    .article__meta {
      font-size: var(--step--2);
    }
  }
  
  @media (max-width: 640px) {
    .article__header {
      margin-bottom: var(--space-l);
      padding-bottom: var(--space-s);
    }
    
    .article__title {
      font-size: var(--step-2);
      line-height: 1.2;
    }
    
    .article__content :global(h2) {
      margin-top: var(--space-l);
      font-size: var(--step-2);
    }
    
    .article__content :global(h3) {
      font-size: var(--step-1);
    }
  }
</style>